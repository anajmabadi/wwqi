<h1>Listing classifications</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Item</th>
    <th>Publish</th>
    <th>Position</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classifications.each do |classification| %>
  <tr>
    <td><%= classification.subject_id %></td>
    <td><%= classification.item_id %></td>
    <td><%= classification.publish %></td>
    <td><%= classification.position %></td>
    <td><%= classification.notes %></td>
    <td><%= link_to 'Show', classification %></td>
    <td><%= link_to 'Edit', edit_classification_path(classification) %></td>
    <td><%= link_to 'Destroy', classification, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


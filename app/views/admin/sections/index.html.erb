<% @page_description = t(:index_description) -%>

<div id="staticContent" class="clearfix">
    <div class="onecolumn">
        <div class="content nomargin">
            <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_section_path, :show_all_path => admin_sections_path } %>
            <table class="global" width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th>Item</th>
                    <th>Start page</th>
                    <th>End page</th>
                    <th>Title</th>
                    <th>Start page label</th>
                    <th>End page label</th>
                    <th>Parent</th>
                    <th>Publish</th>
                    <th>Actions</th>
                </tr>
                <% @sections.each do |section| %>
                <tr>
                    <td><%= link_to section.item.to_label, admin_item_path(section.item) unless section.item.nil? %></td>
                    <td><%= section.start_page %></td>
                    <td><%= section.end_page %></td>
                    <td><%= section.title %></td>
                    <td><%= section.start_page_label %></td>
                    <td><%= section.end_page_label %></td>
                    <td><%= section.parent_id %></td>
                    <td><%= show_check section.publish %></td>
                    <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_section_path(section) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_section_path(section) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_section_path(section), :confirm => 'Are you sure?', :method => :delete %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>


<% @page_description = t(:show_description) -%>
<% @page_title = t(:item).capitalize + " | " + t(:show).capitalize -%>

<div id="staticContent" class="clearfix">
  <h1><%= @page_title %></h1>
  <table class="styled" >
    <tr><th>
        <%= link_to 'Edit', edit_item_path(@item) %> |
        <%= link_to 'Delete', @item, :method => :delete, :confirm => "Are you sure you want to delete this item?" %> |
        <%= link_to 'Back', items_path %> | <%= link_to "New", new_item_path %></th></tr>
    <tr><td><h2>
          <%= image_tag @item.thumbnail_url, :align => 'right', :width => 50 -%>  <%= @item.title_en %>
        </h2></td></tr>
    <tr><td>
        <b>Publish:</b>
        <%= @item.publish %>
      </td></tr>
    <tr><td>
        <b>Accession num:</b>
        <%= @item.accession_num %>
      </td></tr>

    <tr><td>
        <b>Credit</b>
        <%= @item.credit %>
      </td></tr>

    <tr><td>
        <b>Description:</b>
        <%= @item.description %>
      </td></tr>

    <tr><td>
        <b>Olivia:</b>
        <%= @item.olivia_id %>
      </td></tr>

    <tr><td>
        <b>Urn:</b>
        <%= @item.urn %>
      </td></tr>

    <tr><td>
        <b>Creator:</b>
        <%= @item.creator.name unless @item.creator.nil? %>
      </td></tr>

    <tr><td>
        <b>Owner:</b>
        <%= @item.owner.name unless @item.owner.nil? %>
      </td></tr>

    <tr><td>
        <div id="item_passport_list"><span><%= render('items/item_passport_list', :passports => @item.passports ) unless @item.passports.empty? %></span></div>
        <p>&nbsp;</p>
        <div id="addPassport">
          <% if @passport.nil? %>
            <%= render :partial => 'items/add_passport_button', :locals => { :item => @item } %>
          <% else %>
            <%= render 'items/add_passport_form', @passport %>
          <% end %>
        </div>
      </td></tr>

    <tr><td>
        <b>Collection:</b>
        <%= @item.collection.name unless @item.collection.nil? %>
      </td></tr>

    <tr><td>
        <b>Pages:</b>
        <%= @item.pages %>
      </td></tr>

    <tr><td>
        <b>Format:</b>
        <%= @item.format_id %>
      </td></tr>

    <tr><td>
        <b>Display date:</b>
        <%= @item.display_date %>
      </td></tr>

    <tr><td>
        <b>Sort date:</b>
        <%= @item.sort_date %>
      </td></tr>

    <tr><td>
        <b>Dimension Label:</b>
        <%= @item.dimension_label %>
      </td></tr>

    <tr><td>
        <b>Width:</b>
        <%= @item.width %>
      </td></tr>

    <tr><td>
        <b>Height:</b>
        <%= @item.height %>
      </td></tr>

    <tr><td>
        <b>Depth:</b>
        <%= @item.depth %>
      </td></tr>

    <tr><td>
        <b>Length:</b>
        <%= @item.length %>
      </td></tr>

    <tr><td>
        <b>Notes:</b>
        <%= @item.notes %>
      </td></tr>

    <tr><td>
        <b>Place:</b>
        <%= @item.place.name unless @item.place.nil? %>
      </td></tr>

  </table>
  <p>
    <b>Subjects:</b>
  </p>
  <ul>
    <% @subjects = @item.subjects -%>
    <% @subjects.each do |subject| -%>
      <li>
        <%=  subject.subject_type.name %>: <%= truncate(subject.name) %>
      </li>
    <% end -%>
  </ul>
</div>


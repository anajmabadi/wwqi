<% @page_description = t(:index_description) -%>

<div id="staticContent" class="clearfix">
    <div class="onecolumn">
        <div class="content nomargin">
            <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_item_image_path, :show_all_path => admin_item_images_path } %>
            <div class="filterbar"><h5><%= link_to_unless @item.nil?, @item.to_label, admin_item_path(@item) %>, <%= @item.pages %> pages</h5></div>
            <table class="global" width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Verso</th>
                    <th>Position</th>
                    <th>Publish</th>
                    <th><%= t(:actions).capitalize %></th>
                </tr>
                <% @images.each do |image| %>
                <tr>
                    <td><%= link_to_unless image.title.blank?, truncate(image.title), '#' %></td>
                    <td><%= truncate(image.description) unless image.description.blank? %></td>
                    <td><%= show_check image.verso %></td>
                    <td><%= image.position %></td>
                    <td><%= show_check image.publish %></td>
                    <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_item_image_path({:item_id => @item.id, :id => image.id}) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_item_image_path({:item_id => image.item_id, :id => image.id}) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_item_image_path({:item_id => image.item_id, :id => image.id}), :confirm => 'Are you sure?', :method => :delete %></td>
                                    </tr>
                <% end %>
            </table>
            <br class="clear" />
        </div>
    </div>
</div>

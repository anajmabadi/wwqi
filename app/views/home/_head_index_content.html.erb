            $(this).addClass("active");
            $("#featuredContent").animate({scrollLeft: '-1945px'}, 300);
            return false;
        });
        $("#secondFeature").click( function() {
            $(".dots a").removeClass("active");
            $(this).addClass("active");
            $("#featuredContent").animate({scrollLeft: '-973px'}, 300);
            return false;
        });

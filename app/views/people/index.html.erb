<% @page_description = t(:people_index_description) -%>
<% @page_title = t(:people) -%>
<h1>Listing people</h1>
<p><%= link_to 'New person', new_person_path %></p>
<table>
  <tr>
    <th>Id</th>
    <th><%= Person.human_attribute_name("name") %></th>
    <th>Vitals</th>
    <th>Birth place</th>
    <th>Loc name</th>
    <th>Dob</th>
    <th>Dod</th>
    <th>Publish</th>
    <th>Major</th>
    <th>Actions</th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr height="30">
    <td><%= person.id %> </td>
    <td><%= person.name %></td>
    <td><%= person.vitals %></td>
    <td><%= person.birth_place %></td>
    <td><%= person.loc_name %></td>
    <td><%= person.dob %></td>
    <td><%= person.dod %></td>
    <td><%= person.publish %></td>
    <td><%= person.major %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p><%= link_to 'New person', new_person_path %></p>

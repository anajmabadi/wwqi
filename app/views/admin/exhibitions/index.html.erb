<% @page_description = t(:index_description) -%>

<div id="staticContent" class="clearfix">
  <div class="onecolumn">
    <div class="content nomargin">
      <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_exhibition_path, :show_all_path => admin_exhibitions_path } %>

      <table class="global" width="100%" cellpadding="0" cellspacing="0">
        <tr>
          <th>Title</th>
          <th>Caption</th>
          <th>Introduction</th>
          <th>Conclusion</th>
          <th>Author</th>
          <th>Date</th>
          <th>Featured</th>
          <th>Publish</th>
          <th>Actions</th>
        </tr>

        <% @exhibitions.each do |exhibition| %>
          <tr>
            <td><%= exhibition.title %></td>
            <td><%= truncate(exhibition.caption) unless exhibition.introduction.nil? %></td>
            <td><%= truncate(exhibition.introduction) unless exhibition.introduction.nil? %></td>
            <td><%= truncate(exhibition.conclusion) unless exhibition.introduction.nil? %></td>
            <td><%= exhibition.author %></td>
            <td><%= exhibition.date %></td>
            <td><%= show_check exhibition.featured %></td>
            <td><%= show_check exhibition.publish %></td>
            <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_exhibition_path(exhibition) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_exhibition_path(exhibition) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_exhibition_path(exhibition), :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>
      <br class="clear" />
    </div>
  </div>
</div>

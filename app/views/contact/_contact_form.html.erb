<%= form_for(comment, :url => {:controller => :contact, :action => 'create'}) do |f| %>

<%= f.hidden_field :submitted_at, { :value => DateTime.now().to_s } %>
<%= f.hidden_field :ip, { :value => ip } %>
<%= hidden_field_tag :public_comment, 'true' %>

<% if comment.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
    <ul>
        <% comment.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="field">
    <%= f.label :name, t(:name).capitalize %>*
    <br />
    <%= f.text_field :name %>
</div>
<div class="field">
    <%= f.label :email, t(:email).capitalize %>*
    <br />
    <%= f.text_field :email %>
</div>
<div class="field">
    <%= f.label :subject, t(:subject).capitalize %>
    <br />
    <%= f.text_field :subject %>
</div>
<div class="field">
    <%= f.label :comment, t(:comment).capitalize %>*
    <br />
    <%= f.text_area :body, :rows => 5, :cols => 60 %>
</div>
<div class="field">
    <%= f.label :math_problem, t(:math_problem) %>*
    <br />
    <%= f.text_field :math_problem, :size => 5 %>
</div>


<div class="actions">
    <%= f.submit "Send Comment"%>
</div>
<% end %>
<p>
    * Required information.
</p>

<h1>Listing owners</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Address2</th>
    <th>State province</th>
    <th>Postal code</th>
    <th>Country</th>
    <th>Telephone</th>
    <th>Email</th>
    <th>Url</th>
    <th>Contact</th>
    <th>Terms</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @owners.each do |owner| %>
  <tr>
    <td><%= owner.name %></td>
    <td><%= owner.address %></td>
    <td><%= owner.address2 %></td>
    <td><%= owner.state_province %></td>
    <td><%= owner.postal_code %></td>
    <td><%= owner.country %></td>
    <td><%= owner.telephone %></td>
    <td><%= owner.email %></td>
    <td><%= owner.url %></td>
    <td><%= owner.contact %></td>
    <td><%= owner.terms %></td>
    <td><%= owner.notes %></td>
    <td><%= link_to 'Show', admin_owner_path(owner) %></td>
    <td><%= link_to 'Edit', edit_admin_owner_path(owner) %></td>
    <td><%= link_to 'Destroy', admin_owner_path(owner), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<% @page_description = t(:index_description) -%>
<% @page_title = controller.controller_name.humanize -%>

<div id="staticContent" class="clearfix">
    <div class="onecolumn">
    <div class="content nomargin">
        <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_clip_type_path, :show_all_path => admin_clip_types_path } %>
        <table  class="global" width="100%" cellpadding="0" cellspacing="0">

            <tr>
                <th>Name</th>
                <th>Extension</th>
                <th>Publish</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
            <% @clip_types.each do |clip_type| %>
            <tr>
                <td><%= clip_type.name %></td>
                <td><%= clip_type.extension %></td>
                <td><%= clip_type.publish %></td>
                <td><%= clip_type.notes %></td>
                <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_clip_type_path(clip_type) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_clip_type_path(clip_type) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_clip_type_path(clip_type), :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
            <% end %>
        </table>
      <br class="clear" />
    </div>
  </div>
</div>
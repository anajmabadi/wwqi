<div id="zoomify-popup" style="display:none;">
    <div id="zoomify-popup-content" style="padding:20px;color:#fff;">
        <div class="zoomify_container">
            <%= render :partial => "zoomify", :locals => { :item => item, :current_page => 1 } %>
        </div>
        <div class="zoomify_pagination">
            <ul class="left">
                <li>
                    Page <%= current_page %> of <%= item.pages %>
                </li>
                <% if item.pages > 1 -%>
	                <li>
	                    <%= link_to_unless current_page == 1, t(:previous).titleize, archive_detail_path(:id => item.id, :zoomify_page => current_page - 1, :zoomify_show => true) %>
	                </li>
	                <li>
	                    <%= link_to_unless current_page == item.pages, t(:next).titleize, archive_detail_path(:id => item.id, :zoomify_page => current_page + 1, :zoomify_show => true) %>
	                </li>
	                               
	                <li>
	                    <div class="jump_menu page">
	                        <span>
	                        	<%= t(:jump_to_page_prompt) %>
	                        	<%= form_tag(archive_detail_path(:id => item.id), {:method => 'get'}) do %>
	                            <%= text_field_tag :zoomify_page, current_page == item.pages ? current_page - 1 : current_page + 1, :size => 5 %>
	                            <%= hidden_field_tag :zoomify_show, 'true' %>
	                            <%= submit_tag t(:go), :name => nil %>
	                            <% end  -%>
	                        </span>
	                    </div>
	                </li>
	                
	                <% unless @sections_list.nil? -%>
	                <li>
	                    <div class="jump_menu section">
	                        <span>
	                        	<%= t(:jump_to_section_prompt) %>
	                        	<%= form_tag(archive_detail_path(:zoomify_show => 'true', :id => item.id, :zoomify_page => current_page), {:method => 'get'}) do %>
	                            <%= select_tag :zoomify_section_id, options_for_select(@sections_list) -%>
	                            <%= submit_tag t(:go), :name => nil %>
	                            <% end  -%>
	                        </span>
	                    </div>
	                </li>
	                <% end -%>
                
                <% end -%>
            </ul>
            <ul class="right">
                <li class="last">
                    <%= link_to t(:view_full_screen), "#" %>
                </li>
            </ul>
        </div>
    </div>
</div>
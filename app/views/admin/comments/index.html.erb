<h1>Listing comments</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Body</th>
    <th>Submitted at</th>
    <th>Ip</th>
    <th>Replied at</th>
    <th>Name</th>
    <th>Email</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.subject %></td>
    <td><%= comment.body %></td>
    <td><%= comment.submitted_at %></td>
    <td><%= comment.ip %></td>
    <td><%= comment.replied_at %></td>
    <td><%= comment.name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.notes %></td>
    <td><%= link_to 'Show', admin_comment_path(comment) %></td>
    <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', admin_comment_path(comment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


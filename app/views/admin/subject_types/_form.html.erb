<%= form_for([:admin, @subject_type]) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :lock_version %>
  <table class="global" width="80%" cellpadding="0" cellspacing="0">
    <tr>
      <td>
        <div class="field">
          <%= f.label :name_en %><br />
          <%= f.text_field :name_en, :size => 55 %>
        </div>
      </td>
      <td>
        <div class="field persianOnly">
          <%= f.label :name_fa %><br />
          <%= f.text_field :name_fa, :size => 55 %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :description_en %><br />
          <%= f.text_area :description_en %>
        </div>
      </td>
      <td>
        <div class="field persianOnly">
          <%= f.label :description_fa %><br />
          <%= f.text_area :description_fa %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="field">
          <%= f.label :publish %><br />
          <%= f.check_box :publish %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="field">
          <%= f.label :notes %><br />
          <%= f.text_area :notes %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="actions">
          <%= f.submit %>
        </div>
      </td>
    </tr>
  </table>
  <% end %>

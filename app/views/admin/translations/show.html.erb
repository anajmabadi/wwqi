<% @page_description = t(:show_description) -%>
<% @page_title = controller.controller_name.capitalize + ' | ' + t(:show).capitalize -%>

<div id="staticContent" class="clearfix">
  <div class="onecolumn">
    <%= render 'nav_show_header_bar', :translation => @translation %>
    <table class="styled" 
      <tr><td>
          <p>
            <b>Locale:</b>
            <%= @translation.locale %>
          </p>

          <p>
            <b>Key:</b>
            <%= @translation.key %>
          </p>

          <p>
            <b>Value:</b>
            <span <%= raw ' dir="' + (@translation.locale == 'fa' ? 'rtl' : 'ltr') + '"'-%>><%= @translation.value %></span>
          </p>

          <p>
            <b>Interpolations:</b>
            <%= @translation.interpolations %>
          </p>

          <p>
            <b>Is proc:</b>
            <%= @translation.is_proc %>
          </p>
        </td></tr>
    </table>
  </div>
</div>
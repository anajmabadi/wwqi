<h3><%= link_to t(:people).capitalize, archive_people_path %></h3>
<div class="list">
    <ul class="default">
        <% @people.where("major=?",true).limit(3).each do |person| -%>
        <li>
            <%= link_to truncate(person.name, :length => 50), archive_browser_path(:person_filter=>person.id) %>  <span>(<%= localized_number(person.items.count) %>)</span>
        </li>
        <% end -%>
    </ul>
    <ul class="more">
        <% @people.where("major=?",false).limit(10).each do |person| -%>
        <li>
            <%= link_to truncate(person.name, :length => 50), archive_browser_path(:person_filter=>person.id) %>  <span>(<%= localized_number(person.items.count) %>)</span>
        </li>
        <% end -%>
    </ul>
    <%= link_to t(:see_more), archive_people_path, :class => "moreLink" %>
</div>
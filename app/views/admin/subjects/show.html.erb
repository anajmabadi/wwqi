<% @page_description = t(:show_description) -%>
<% @page_title = t(:subject).capitalize + " | " + t(:show).capitalize -%>

<div id="staticContent" class="clearfix">
  <div class="onecolumn">
    <%= render 'nav_show_header_bar', :subject => @subject %>
  <table class="global" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td>
        <div class="field">
          <%= label @subject, :name_en %><br />
          <%= @subject.name_en %>
        </div>
      </td>
      <td>
        <div class="field persianOnly">
          <%= label @subject, :name_fa %><br />
          <%= @subject.name_fa %>
        </div>
      </td>
    </tr>
        <tr>
      <td colspan="2">
        <div class="field">
          <%= label @subject, :subject_type_id %><br />
          <%= link_to(@subject.subject_type.name, admin_subject_type_path(@subject.subject_type)) unless @subject.subject_type.nil? %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= label @subject, :major %><br />
          <%= @subject.major %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= label @subject, :publish %><br />
          <%= @subject.publish %>
        </div></td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="field">
          <%= label @subject, :notes %><br />
          <%= @subject.notes %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="field">
          Related items:<br />
          <ul>
          <% @subject.items.each do |item| -%>
            <li><%= link_to item.to_label, admin_item_path(item) %></li>
          <% end -%>
          </ul>
        </div>
      </td>
    </tr>
  </table>
    <%= render 'nav_show_header_bar', :subject => @subject %>
  </div>
</div>
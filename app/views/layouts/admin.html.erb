<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <%= csrf_meta_tag %>

    <title><%= t(:site_title) -%> | <%= @page_title || controller.controller_name.capitalize %></title>
    <% unless @page_description.nil? && @page_title.nil? -%>
      <meta name="description" content="<%= @page_description || @page_title %>" />
    <% end -%>

    <!-- facebook metatags -->
    <%= render 'shared/social_meta_tags' %>

    <!-- load the common styles to all pages -->
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <%= stylesheet_link_tag 'admin/admin_style','admin/screen', 'admin/datepicker', 'admin/tipsy', 'admin/visualize', '/javascripts/fancybox/jquery.fancybox-1.3.1.css', :media => 'screen' %>

    <!-- load the common scripts -->
    <%= javascript_include_tag :defaults %>

    <!-- load the administration tags -->
    <%= javascript_include_tag 'fancybox/jquery.fancybox-1.3.1.pack.js','jwysiwyg/jquery.wysiwyg.js','hint.js','jquery.visualize.js', 'jquery.tipsy.js','browser.js', 'custom.js' %>

    <!-- load styles conditionally based on the controller name -->
    <%= raw @extra_head_content unless @extra_head_content.nil? -%>

  </head>
  <body>
    <%= render 'shared/header' %>
    <div id="content" class="clearfix">
        <%= render 'admin/admin/admin_main_nav' -%>

        <%= raw flash_messages %>

        <!-- rails template content -->
        <%= yield :layout %>
        <!-- end rails template content -->


    </div><!-- end content -->
    <%= render 'shared/footer'%>

    <%= raw google_analytics_block -%>

  </body>
</html>

<% @page_description = t(:index_description) -%>

<div id="staticContent" class="clearfix">
    <div class="onecolumn">
        <div class="content nomargin">
            <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_comp_path, :show_all_path => admin_comps_path } %>
            <table class="global" width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th>Item</th>
                    <th>Comp</th>
                    <th>Position</th>
                    <th>Publish</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
                <% @comps.each do |comp| %>
                <tr>
                    <td><%= comp.item_id %></td>
                    <td><%= comp.comp_id %></td>
                    <td><%= comp.position %></td>
                    <td><%= show_check comp.publish %></td>
                    <td><%= comp.notes %></td>
                    <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_comp_path(comp) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_comp_path(comp) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_comp_path(comp), :confirm => 'Are you sure?', :method => :delete %></td>
                </tr>
                <% end %>
            </table>
            <br class="clear" />
        </div>
    </div>
</div>
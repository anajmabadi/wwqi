<% @page_description = t(:show_description) -%>
<% @page_title = t(:repository).capitalize + " | " + t(:show).capitalize -%>

<div id="staticContent" class="clearfix">
  <div class="onecolumn">
    <%= render 'nav_show_header_bar', :repository => @repository %>

    <table class="global" width="100%" cellpadding="0" cellspacing="0">
      <tr>
        <td>
          <div class="field">
            <%= label @repository, :name_en %><br />
            <%= @repository.name_en %>
          </div></td>
        <td>
          <div class="field">
            <%= label @repository, :name_fa %><br />
            <%= @repository.name_fa %>
          </div>
        </td></tr>
      <tr>
            <tr>
        <td colspan='2'>
          <div class="field">
            <%= label @repository, :url %><br />
            <%= @repository.url %>
          </div>
        </td>
      </tr>
        <td>
          <div class="field">
            <%= label @repository, :owner %><br />
            <%= @repository.owner.name unless @repository.owner.nil? %>
          </div></td><td>
          <div class="field">
            <%= label @repository, :publish %><br />
            <%= @repository.publish %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan='2'>
          <div class="field">
            <%= label @repository, :notes %><br />
            <%= @repository.notes %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <p><b>Items:</b></p>
          <ul>
            <% @repository.passports.each do |passport|  -%>
              <% unless passport.item.nil? || passport.repository.nil? %>
              <li><%= link_to passport.item.to_label, admin_item_url(passport.item) %> --> <%= link_to 'show in external repository', passport.full_url, :target => '_blank' %> </li>
              <% end %>
            <% end -%>
          </ul>
        </td>
      </tr>
    </table>
    <%= render 'nav_show_header_bar', :repository => @repository %>
  </div>
</div>

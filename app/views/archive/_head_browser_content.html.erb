<script language="javascript" type="application/javascript">
    $(document).ready( function() {

        $("#browseBar h3 a").click( function() {

            $(this).parent().toggleClass("active").next(".list").animate({
                opacity: 'toggle',
                height: 'toggle'
            }, 300);
            return false;

        });
        $("#browseBar a.moreLink").click( function() {
            if ($(this).html()=="<%= t(:see_more) %>") {
                $(this).html("<%= t(:see_less) %>");
                $(this).addClass("less");
            } else {
                $(this).html("<%= t(:see_more) %>");
                $(this).removeClass("less");
            }
            $(this).parents(".list").find("ul.more").animate({
                opacity: 'toggle',
                height: 'toggle'
            }, 300);
            return false;
        });
        $(".select-item input").click( function() {
            if($(this).is(":checked")) {
                $(this).parents(".listItem").addClass("highlight");
                setActionsButtonState();
            } else {
                $(this).parents(".listItem").removeClass("highlight");
                $(".actions-dropdown").hide();
                setActionsButtonState();
            }
        });
        $(".actions-dropdown-button").click( function() {
            if($(this).hasClass("disabled")) {
                return;
            } else {
                $(".actions-dropdown").toggle();
            }
        });
        $(".actions-dropdown").hover( function() {
        }, function() {
            $(this).hide();
        });
        
		$(".item").hover(function(){
					
					$("a.title",this).show('fade');
				}, function(){
					$("a.title",this).hide('fade');
				});
				
        setActionsButtonState = function() {
            if ($(".listItem.highlight").length>0) {
                $(".actions-dropdown-button").removeClass("disabled");
            } else
                $(".actions-dropdown-button").addClass("disabled");
        }
        setActionsButtonState();
		
		$(".listItem").click( function() {
            window.location=$(this).find("h3 a").attr("href");
        })

    });
</script>
        <div class="field">
          <%= f.label :owner_id %><br />
          <%= f.select :owner_id, @owners %>
        </div></td><td>
        <div class="field">
          <%= f.label :publish %><br />
          <%= f.check_box :publish %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :notes %><br />
          <%= f.text_area :notes, :rows => 3 %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="actions">
          <%= f.submit %>
        </div>
      </td>
    </tr>

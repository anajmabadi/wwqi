<h1>Listing translations</h1>

<table>
  <tr>
    <th>Locale</th>
    <th>Key</th>
    <th>Value</th>
    <th>Interpolations</th>
    <th>Is proc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
    <td><%= translation.locale %></td>
    <td><%= translation.key %></td>
    <td><%= translation.value %></td>
    <td><%= translation.interpolations %></td>
    <td><%= translation.is_proc %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


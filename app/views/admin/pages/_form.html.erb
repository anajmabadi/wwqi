<% form_for([:admin, @page]) do |f| %>
  <%= f.error_messages %>
  <table class="styled" >
    <tr><td><div class="field">
          <%= f.label :title_en %><br />
          <%= f.text_field :title_en %>
        </div></td>
        <td><div class="field persianOnly">
          <%= f.label :title_fa %><br />
          <%= f.text_field :title_fa %>
        </div></td></tr>
    <tr><td><div class="field">
          <%= f.label :author_en %><br />
          <%= f.text_field :author_en %>
        </div></td>
    <td><div class="field persianOnly">
          <%= f.label :author_fa %><br />
          <%= f.text_field :author_fa %>
        </div></td></tr>
    <tr><td><div class="field">
          <%= f.label :caption_en %><br />
          <%= f.text_area :caption_en %>
        </div></td>
    <td><div class="field persianOnly">
          <%= f.label :caption_fa %><br />
          <%= f.text_area :caption_fa %>
        </div></td></tr>
    <tr><td><div class="field">
          <%= f.label :body_en %><br />
          <%= f.text_area :body_en %>
        </div></td>
    <td><div class="field persianOnly">
          <%= f.label :body_fa %><br />
          <%= f.text_area :body_fa %>
        </div></td></tr>
    <tr><td><div class="field">
          <%= f.label :publish %><br />
          <%= f.check_box :publish %>
        </div></td>
        <td><div class="field">
          <%= f.label :notes %><br />
          <%= f.text_area :notes, :rows => 3 %>
        </div></td></tr>
    <tr><td><div class="actions">
          <%= f.submit %>
        </div></td></tr>
  </table>
  <% end %>

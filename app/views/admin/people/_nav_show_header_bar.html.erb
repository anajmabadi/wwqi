<div class="header">
    <div class="description">
        <h1><%= link_to controller.controller_name.capitalize, admin_people_path  %> | Show </h1>
    </div>
    <div class="back_next" >
    </div>
    <div class="tools">
        <%= link_to 'Back', session[:_qajar_session][:admin_people_index_url] ||= admin_people_path %> |
        <%= link_to_unless @people.index(@person) == 0, 'Previous', :action => :show, :id => @people[@people.index(@person)-1]  %> |
        <%= link_to_unless @people.index(@person) == @people.size - 1, 'Next', :action => :show, :id => @people[@people.index(@person)+1]  %> |
        <%= link_to 'Edit', edit_admin_person_path(person) %> |
        <%= link_to 'Delete', admin_person_path(person), :method => :delete, :confirm => "Are you sure you want to delete this person?" %> |
        <%= link_to "New", new_admin_person_path %>
    </div>
</div>
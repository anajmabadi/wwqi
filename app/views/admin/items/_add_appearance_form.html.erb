<span>
    <hr />
    <%= form_for(['admin', appearance], :remote => true) do |f| %>
    <% if appearance.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(appearance.errors.count, "error") %> prohibited this appearance from being saved:</h2>
        <ul>
            <% appearance.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.hidden_field(:item_id) %>

    <div class="field">
        <%= f.label :person_id %>:
        <%= f.select :person_id, @people %>
    </div>
    <div class="field">
        <%= f.label :caption_en %>:
        <%= f.text_area :caption_en, :rows => 3 %>
    </div>
    <div class="field">
        <%= f.label :caption_fa %>:
        <%= f.text_area :caption_fa, :rows => 3, :class => 'persianOnly' %>
    </div>
    <div class="field">
        <%= f.label :publish %>:
        <%= f.check_box :publish %>
    </div>
    <div class="field">
        <%= f.label :position %>:
        <%= f.text_field :position, :size => 5 %>
    </div>
    <div class="field">
        <%= f.label :notes %>:
        <%= f.text_field :notes %>
    </div>
    </div>
    <div class="field">

    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <% end %>
    <%= button_to 'Cancel', { :controller => "items", :action => 'hide_add_appearance_to_item', :id => item.id }, :remote => true %>
</span>

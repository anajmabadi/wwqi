<div class="paginationBar clearfix">
  <div class="sortnav paginate">
    <%= will_paginate @items %>
  </div>
  <ul class="sortnav" id="sort" style="float:left; width:200px;">
    <li class="label"><%= t(:sort_by) %> :</li>
    <li class="active"><a href="#" class="module-link AZsort"><%= t(:az_sort) %><span class="up"></span></a></li>
    <li><a href="#" class="module-link dateSort"><%= t(:date) %><span></span></a></li>
  </ul>
  <ul class="sortnav" id="viewMode" style="float:left">
    <li class="label"><%= t(:view_mode) %> </li>
    <li<%= raw  ' class="active"' if @view_mode == 'list' %>><%= link_to( t(:list_view), {:controller => :collections, :view_mode => 'list'}, {:class => 'module-link'}) -%></li>
    <li<%= raw  ' class="active"' if @view_mode == 'grid' %>><%= link_to( t(:grid_view), {:controller => :collections, :view_mode => 'grid'}, {:class => 'module-link'}) -%></li>
    <li<%= raw  ' class="active"' if @view_mode == 'slideshow' %>><%= link_to( t(:slideshow), {:controller => :collections, :view_mode => 'slideshow'}, {:class => 'module-link'}) -%></li>
  </ul>
</div> 
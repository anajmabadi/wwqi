<h1>Listing collections</h1>

<table>
  <tr>
    <th><%= t(:id) %></th>
    <th><%= t(:name) %></th>
    <th><%= t(:email) %></th>
    <th><%= t(:website) %></th>
    <th><%= t(:contact) %></th>
    <th><%= t(:actions) %></th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%= collection.id %></td>
    <td><%= collection.name %></td>
    <td><%= collection.email %></td>
    <td><%= link_to collection.website, collection.website, :html => {:target => 'blank'} unless collection.website.blank? %></td>
    <td><%= collection.contact %></td>
    <td><%= link_to 'Show', collection %> | <%= link_to 'Edit', edit_collection_path(collection) %> | <%= link_to 'Destroy', collection, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


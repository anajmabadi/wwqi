<%= form_for([:admin, @passport]) do |f| %>

  <table class="global" width="100%" cellpadding="0" cellspacing="0">
    <tbody><tr><td>
          <% if @passport.errors.any? %>
            <div class="error">
              <h2><%= pluralize(@passport.errors.count, "error") %> prohibited this passport from being saved:</h2>
              <ul>
                <% @passport.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <%= f.label :tag %><br />
            <%= f.text_field :tag %>
          </div>
          <div class="field">
            <%= f.label :repository_id %><br />
            <%= f.select :repository_id, @repositories %>
          </div>
          <div class="field">
            <%= f.label :item_id %><br />
            <%= f.select :item_id, @items %>
          </div>
          <div class="field">
            <%= f.label :publish %><br />
            <%= f.check_box :publish %>
          </div>
          <div class="field">
            <%= f.label :primary %><br />
            <%= f.check_box :primary %>
          </div>
          <div class="field">
            <%= f.label :position %><br />
            <%= f.text_field :position %>
          </div>
          <div class="field">
            <%= f.label :notes %><br />
            <%= f.text_area :notes, :rows => 3 %>
          </div>
          <div class="field">
            <%= f.label :custom_url %> (Optional: overrides repository url)<br />
            <%= f.text_area :custom_url, :rows => 3 %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

        <td>
        <div class="field englishOnly">
            <%= f.label :recorded_on %>
            <br />
            <%= f.date_select :recorded_on %>
        </div></td>
    </tr>
    <tr>
        <td>
        <div class="field englishOnly">
            <%= f.label :duration %> 
            <br />
            <%= f.text_field :duration %></br>

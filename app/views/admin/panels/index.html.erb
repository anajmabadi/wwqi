<h1>Listing panels</h1>

<table>
  <tr>
    <th>Exhibition</th>
    <th>Item</th>
    <th>Position</th>
    <th>Publish</th>
    <th>Caption</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @panels.each do |panel| %>
  <tr>
    <td><%= panel.exhibition_id %></td>
    <td><%= panel.item_id %></td>
    <td><%= panel.position %></td>
    <td><%= panel.publish %></td>
    <td><%= panel.caption %></td>
    <td><%= panel.notes %></td>
    <td><%= link_to 'Show', panel %></td>
    <td><%= link_to 'Edit', edit_panel_path(panel) %></td>
    <td><%= link_to 'Destroy', panel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


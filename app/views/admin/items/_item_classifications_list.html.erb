<span>
    <h3>Classifications:</h3>
    <ul>
        <% sorted_list = classifications.map { |c| [c.subject.to_label, c.id] }.sort %>
        <% sorted_list.each do |short_classification| -%>
        <li>
            <%= link_to short_classification[0], admin_classification_path(short_classification[1]) %>
            <%= link_to image_tag("delete.png", :alt => 'delete'), admin_classification_path(short_classification[1]), :confirm => 'Are you sure?', :method => :delete, :remote => 'true' %>
        </li>
        <% end %>
    </ul>
</span>

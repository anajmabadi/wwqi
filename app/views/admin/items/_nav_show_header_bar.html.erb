<div class="header">
    <div class="description">
        <h1><%= link_to controller.controller_name.capitalize, admin_items_path  %> | Show </h1>
    </div>
    <div class="tools">
        <%= link_to 'Back', session[:admin_items_index_url] ||= admin_items_path %> |
        <%= link_to_unless items.index(item) == 0, 'Previous', :controller => 'admin/items', :action => :show, :id => items[items.index(item)-1]  %> |
        <%= link_to_unless items.index(item) == items.size - 1, 'Next', :controller => 'admin/items', :action => :show, :id => items[items.index(item)+1]  %> |
        <%= link_to 'Edit', edit_admin_item_path(item) %> |
        <%= link_to 'Delete', admin_item_path(item), :method => :delete, :confirm => "Are you sure you want to delete this item?" %> |
        <%= link_to "New", new_admin_item_path %> |
        <%= link_to "Live Preview" , archive_detail_path(:id => item.id), :title => item.title, :target => "_blank" %>
    </div>
</div>
<%
  @swf_width = '100%'
  @swf_height = '500'
  @bg_color = "#CCCCCC"
  @allow_full_screen = "true"

  #variable properties
  if @item.pages == 1
    @viewer_url = "/images/zoomify_fullscreen.swf"
    @flash_vars = "zoomifyImagePath=#{@item.zoomify_url(1)}&zoomifyToolbarLogo=0&zoomifySplashScreen=0&zoomifyToolbarVisible=2&zoomifyNavigatorVisible=0"
  elsif @item.pages > 1
    @viewer_url = "/images/zoomify_gallery.swf"
    @flash_vars = "zoomifyImagePath=#{@item.zoomify_url(1)}&zoomifyToolbarLogo=0&zoomifySplashScreen=0&zoomifyToolbarVisible=1&zoomifyNavigatorVisible=0&zoomifySlidesXMLPath=#{@item.slides_xml_url}"
  end

%>
<%= render :partial => 'zoomify_object',
  :locals => {
    :item => @item,
    :flash_vars => @flash_vars
  }
%>

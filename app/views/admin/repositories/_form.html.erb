<%= form_for([:admin, @repository]) do |f| %>

<%= f.hidden_field :lock_version %>
<table class="global" width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td><% if @repository.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@repository.errors.count, "error") %> prohibited this repository from being saved:</h2>
            <ul>
                <% @repository.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %></td>
    </tr>
    <tr>
        <td>
        <div class="field">
            <%= f.label :name_en %>
            <br />
            <%= f.text_field :name_en %>
        </div></td>
        <td>
        <div class="field persianOnly">
            <%= f.label :name_fa %>
            <br />
            <%= f.text_field :name_fa %>
        </div>
        </td>
    </tr>
    <tr>
        <td colspan="2">
        <div class="field">
            <%= f.label :url %>
            <br />
            <%= f.text_area :url, :rows => 3 %>
        </div>
        </td>
    </tr>
    <tr>
        <td>
        <div class="field">
            <%= f.label :owner_id %>
            <br />
            <%= f.select :owner_id, @owners %>
        </div></td><td>
        <div class="field">
            <%= f.label :publish %>
            <br />
            <%= f.check_box :publish %>
        </div>
        </td>
    </tr>
    <tr>
        <td colspan="2">
        <div class="field">
            <%= f.label :notes %>
            <br />
            <%= f.text_area :notes, :rows => 3 %>
        </div>
        </td>
    </tr>
    <tr>
        <td>
        <div class="actions">
            <%= f.submit %>
        </div>
        </td>
    </tr>
</table>
<% end %>

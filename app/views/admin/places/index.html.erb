<% @page_description = t(:index_description) -%>

<div id="staticContent" class="clearfix">
    <div class="onecolumn">
        <div class="content nomargin">
            <%= render :partial => 'admin/admin/nav_header_bar', :locals => {:new_passed_path => new_admin_place_path, 
            	:show_all_path => admin_places_path,
            	:export_passed_path => export_admin_places_path(:format => :csv)  } %>
            <%= render 'nav_filter_bar' %>
            <table class="global" width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <th><%= sort_link 'Id', 'id' %></th>
                    <th><%= sort_link 'Name_en', 'name_en' %></th>
                    <th><%= sort_link 'Name_fa', 'name_fa' %></th>
                    <th><%= sort_link 'Publish', 'publish' %></th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
                <% @places.each do |place| %>
                <tr>
                    <td><%= link_to(place.id.to_s, admin_place_path(place)) %></td>
                    <td><%= link_to_unless(place.name_en.blank?, place.name_en, admin_place_path(place)) %></td>
                    <td class="persianOnly"><%= link_to_unless(place.name_fa.blank?, place.name_fa, admin_place_path(place)) %></td>
                    <td><%= show_check place.publish %></td>
                    <td><%= truncate(place.notes) unless place.notes.nil? %></td>
                    <td><%= link_to image_tag("page_white_text.png", :alt => 'show'), admin_place_path(place) %> <%= link_to image_tag("page_white_edit.png", :alt => 'edit'), edit_admin_place_path(place) %> <%= link_to image_tag("delete.png", :alt => 'delete'), admin_place_path(place), :confirm => 'Are you sure?', :method => :delete %></td>
                </tr>
                <% end %>
            </table>
            <br class="clear" />
        </div>
    </div>
</div>

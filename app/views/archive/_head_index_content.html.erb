<script src="/javascripts/jquery.qtip-1.0.0-rc3.js" type="text/javascript"></script>
<script type="text/javascript" src="/javascripts/facebox.js"> </script>
<script language="javascript" type="application/javascript">
    $(document).ready( function() {

        $("#browseBar h3 a").click( function() {

            $(this).parent().toggleClass("active").next(".list").animate({
                opacity: 'toggle',
                height: 'toggle'
            }, 300);
			$(this).parent().next(".list").find("ul.more").hide();
			$(this).parent().next(".list").find("a.moreLink").removeClass("less").html("<%= t(:see_more) %>");
            return false;

        });
        $("#browseBar a.moreLink").click( function() {
            if ($(this).html()=="<%= t(:see_more) %>") {
                $(this).html("<%= t(:see_less) %>");
                $(this).addClass("less");
            } else {
                $(this).html("<%= t(:see_more) %>");
                $(this).removeClass("less");
            }
            $(this).parents(".list").find("ul.more").animate({
                opacity: 'toggle',
                height: 'toggle'
            }, 300);
            return false;
        });
    });
</script>
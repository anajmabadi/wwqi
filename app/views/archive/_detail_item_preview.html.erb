<div id="itemPreview" style="height:auto">
    <span class="image-count"><%= localized_number(item.pages) + " " + (item.pages == 1 ? t(:image) : t(:images)) %></span>
    <a href="<%= item.preview_url %>" rel="shadowbox[gallery]">
    <img src="<%= item.thumbnail_url %>" alt="<%= item.title %>">
    </a>
    <% (2..item.pages).each do |page| %>
    <a href="<%= item.preview_url(page) %>" rel="shadowbox[gallery]"></a>
    <% end unless item.pages < 2 %>
    <a href="<%= item.preview_url %>" rel="shadowbox[gallery]" class="redButton"><%= t(:view_in_lightbox) %></a>
    <a href="#" class="redButton"><%= t(:view_in_zoomify) %></a>
    <a rel="shadowbox[print];width=310px;height=260px;" href="#print-popup" class="redButton"><%= t(:print).titleize %></a>
    <%= link_to t(:download).titleize, archive_detail_download_path(item), :class => "blackButton" %>
    <%= link_to t(:translation).titleize, "#", :class => "blackButton" unless item.transcript_en.blank? %>
    <%= link_to t(:transcript).titleize, "#", :class => "blackButton" unless item.transcript_fa.blank? %>
    <% if @my_archive_ids.include?(item.id) -%>
    <%= link_to t(:remove_from_my_archive), archive_detail_forget_path(item), :class => "blackButton" %>
    <% else -%>
    <%= link_to t(:add_to_my_archive), archive_detail_remember_path(item), :class => "blackButton" %>
    <% end -%>
</div>
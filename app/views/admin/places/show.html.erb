    <table class="global" width="80%" cellpadding="0" cellspacing="0">
      <tr>
        <td>
          <div class="field">
            <%= label @place, :name_en %><br />
            <%= @place.name_en %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= label @place, :name_fa %><br />
            <%= @place.name_fa %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="field">
            <%= label @place, :latitude %><br />
            <%= @place.latitude %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= label @place, :longitude %><br />
            <%= @place.longitude %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="field">
            <%= label @place, :x %><br />
            <%= @place.x %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= label @place, :y %><br />
            <%= @place.y %>
          </div>
        </td></tr>
      <tr><td>
          <div class="field">
            <%= label @place, :publish %><br />

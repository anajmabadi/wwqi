        <td>
        <% if @person.errors.any? %>
        <div id="errorExplanation">
            <h2><%= pluralize(@person.errors.count, "error") %> prohibited this clip from being saved:</h2>
            <ul>
                <% @person.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %>
        </td>
    </tr>
    <tr>
        <td>
        <div class="field">
            <%= f.label :name_en %>
            <br />
            <%= f.text_field :name_en, :size => 75 %>
        </div></td>
        <td>
        <div class="field persianOnly">
            <%= f.label :name_fa %>
            <br />
            <%= f.text_field :name_fa, :size => 75 %>
        </div></td>
    </tr>
    <tr>
        <td>
        <div class="field">
            <%= f.label :sort_name_en %>
            <br />
            <%= f.text_field :sort_name_en, :size => 75 %>
        </div></td>
        <td>
        <div class="field persianOnly">
            <%= f.label :sort_name_fa %>
            <br />
            <%= f.text_field :sort_name_fa, :size => 75 %>
        </div></td>
    </tr>
    <tr>
        <td>
        <div class="field ">
            <%= f.label :description_en %>

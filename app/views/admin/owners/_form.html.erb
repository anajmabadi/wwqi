            <br />
            <%= f.text_field :credit_en %>
        </div>
        </td>
        <td>
        <div class="field persianOnly">
            <%= f.label :credit_fa %>
            <br />
            <%= f.text_field :credit_fa %>
        </div>
        </td>
    </tr>
    <tr>
        <td>
        <div class="field">
            <%= f.label :restrictions_en %>
            <br />
            <%= f.text_area :restrictions_en %>

<% @page_description = t(:donate_materials_description) -%>
<% @page_title = @page.title -%>
<h1>
  <%= @page.title %>
</h1>
<%  unless @page.author == 'Anonymous' -%>
<p>
  <%= @page.author%>
</p>
<% end %>
<%  if @page.caption -%>
<em>
  <%= @page.caption %>
</em>
<% end %>
<%= raw @page.body %>



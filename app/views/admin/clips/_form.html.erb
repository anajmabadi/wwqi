            <%= f.label :location_fa %>
            <br />
            <%= f.text_area :location_fa, :rows => 3 %>
        </div>
        </td>
    </tr>
    <tr>
        <td colspan="2">
        <div class="field englishOnly">
            <%= f.label :item_id %>
            <br />
            <%= f.select :item_id, @items %>
        </div></td>
    </tr>
    <tr>
        <td>
        <div class="field englishOnly">
            <%= f.label :clip_type_id %>
            <br />
            <%= f.select :clip_type_id, @clip_types %>

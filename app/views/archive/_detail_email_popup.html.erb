<div id="email-popup" style="display:none;">
    <div id="email-popup-content" style="padding:20px;color:#fff;">
        <h2>
            <%= t(:email_popup_prompt) %>
        </h2>
        <form id="email-form" action="<%= archive_detail_email_path %>" method="POST" >
        	<%= hidden_field_tag :id, items[0].id %>
            <div class="form_row">
                <%= t(:from_email) %> <span class="mandatory">*</span>
                <br />
                <input type="input" name="from" id="from" size=70 onchange="validateEmail(this);"/>
            </div>
            <div class="form_row">
                <%= t(:to_email) %>  <span class="mandatory">*</span>
                <br />
                <input type="input" name="to"  id="to" size=70 onchange="validateEmail(this);"/>
            </div>
            <div class="form_row">
                <%= t(:note) %>
                <br />
                <textarea rows=3 cols=76 name="body"></textarea>
            </div>
            <div class="form_row">
                <%= t(:citation_preview) %>
                <br />
                <textarea rows=5 cols=76 name="citations" disabled="true" ><%= items.map { |i| h(i.full_citation) }.join("\n\n") %></textarea>
            </div>
            <div class="form_row">
                <input type="submit" class="redButton" value="<%= t(:email) %>" disabled=true>
            </div>
        </form>
    </div>
</div>

